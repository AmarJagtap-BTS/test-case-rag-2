# Performance Optimization Settings

# Parallel Processing
MAX_WORKERS=15  # Maximum concurrent workers for parallel processing

# LLM Settings (for faster responses)
LLM_TIMEOUT=30  # Timeout in seconds for LLM calls
LLM_MAX_RETRIES=2  # Maximum retries for failed LLM calls
LLM_TEMPERATURE_GENERATION=0.5  # Temperature for test case generation
LLM_TEMPERATURE_COMPARISON=0.1  # Temperature for comparison analysis
LLM_TEMPERATURE_REASONING=0.3  # Temperature for reasoning generation

# Token Limits (reduced for faster responses)
MAX_TOKENS_GENERATION=3000  # Max tokens for test case generation
MAX_TOKENS_COMPARISON=800  # Max tokens for comparison analysis
MAX_TOKENS_REASONING=150  # Max tokens for reasoning

# Embedding Settings
EMBEDDING_CACHE_SIZE=1000  # Maximum number of embeddings to cache
EMBEDDING_TIMEOUT=30  # Timeout for embedding generation

# ChromaDB Settings
CHROMA_BATCH_SIZE=16  # Batch size for ChromaDB operations
