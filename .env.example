# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Vector Database
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Similarity Thresholds
THRESHOLD_SAME=0.85
THRESHOLD_ADDON_MIN=0.60
THRESHOLD_ADDON_MAX=0.85

# Hybrid Scoring Weights
SEMANTIC_WEIGHT=0.60
LLM_WEIGHT=0.40

# RAG Configuration
RAG_TOP_K=10

# Test Case Generation Configuration
USE_PARALLEL_GENERATION=true

# Test Case Generation Limits (NEW)
# Minimum number of test cases to generate
MIN_TEST_CASES=8
# Maximum number of test cases to generate
MAX_TEST_CASES=12
# Default number when not specified
DEFAULT_TEST_CASES=10

# Test Case Type Distribution (as decimal percentages 0.0-1.0)
# Positive test cases (20-30% of total)
POSITIVE_MIN_PERCENT=0.20
POSITIVE_MAX_PERCENT=0.30

# Negative test cases (30-40% of total)
NEGATIVE_MIN_PERCENT=0.30
NEGATIVE_MAX_PERCENT=0.40

# UI test cases (20-30% of total)
UI_MIN_PERCENT=0.20
UI_MAX_PERCENT=0.30

# Security test cases (10-20% of total)
SECURITY_MIN_PERCENT=0.10
SECURITY_MAX_PERCENT=0.20

# Edge case test cases (10-20% of total)
EDGE_CASE_MIN_PERCENT=0.10
EDGE_CASE_MAX_PERCENT=0.20

# Storage Paths
KNOWLEDGE_BASE_PATH=./knowledge_base
TEST_SUITE_OUTPUT=./output
